{
	"name": "nella/framework",
	"type": "nette-addon",
	"description": "Nella Framework",
	"keywords": ["nella", "framework", "doctrine", "nette"],
	"homepage": "http://nellafw.org",
	"license": ["BSD-3-Clause", "GPL-2.0+"],
	"authors": [
		{
			"name": "Patrik VotoÄek",
			"email": "patrik@votocek.cz",
			"homepage": "http://patrik.votocek.cz"
		},
		{
			"name": "Nella Project",
			"homepage": "http://nella-project.org"
		}
	],
	"autoload": {
		"psr-0": { "Nella": "./" },
		"files": ["Nella/shortcuts.php", "Nella/Localization/shortcuts.php"]
	},
	"require": {
		"php": ">=5.3.2",
		"doctrine/orm": "2.3.*",
		"doctrine/migrations": "@dev",
		"symfony/console": ">=2.0.0",
		"nette/nette": ">=2.0.5"
	},
	"require-dev": {
		"nella/testing": "@dev"
	},
	"replace": {
		"nella/console": "self.version",
		"nella/doctrine": "self.version",
		"nella/diagnostics": "self.version",
		"nella/forms": "self.version",
		"nella/media": "self.version",
		"nella/localization": "self.version"
	}
}
