<script type="text/javascript">
/* <![CDATA[ */

var callbackPanel = {
	init: function() {
		document.getElementById('nette-addons-CallbackPanel-button').onclick = function () {
			document.getElementById('nette-addons-CallbackPanel-button').disabled = true;
			document.getElementById('nette-addons-CallbackPanel-spinner').style.display = "inline";
			callbackPanel.commit();
		};
	},

	commit: function () {
		var items = <?php echo json_encode(array_keys($items)) ?>;
		var data = {};

		for (var i in items) {
			if (document.getElementById('nette-addons-CallbackPanel-item'+items[i]).checked == true) {
				data[items[i]] = true;
			}
		}

		var xmlHttp = window.ActiveXObject ? new ActiveXObject('Microsoft.XMLHTTP') : new XMLHttpRequest();
		xmlHttp.onreadystatechange = function() {
			if (xmlHttp.readyState == 4) {
				if (xmlHttp.status == 200) {
					document.getElementById('nette-addons-CallbackPanel-button').disabled = false;
					document.getElementById('nette-addons-CallbackPanel-spinner').style.display = "none";
					for (var i in items) {
						if (document.getElementById('nette-addons-CallbackPanel-item'+items[i]).checked == true) {
							document.getElementById('nette-addons-CallbackPanel-item'+items[i]).checked = false;
						}
					}
				} else {
					var win = window.open('', 'Error');
					win.document.write(xmlHttp.responseText);
					document.getElementById('nette-addons-CallbackPanel-button').disabled = false;
					document.getElementById('nette-addons-CallbackPanel-spinner').style.display = "none";
				}
			}
		}
		xmlHttp.open("POST", <?php echo json_encode(\Nette\Environment::getApplication()->getService('Nette\Http\IRequest')->url->absoluteUrl); ?>, true);
		xmlHttp.setRequestHeader('X-Callback-Panel', 'TRUE');
		xmlHttp.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
		xmlHttp.send(JSON.stringify(data));
	}
};

/* ]]> */
</script>

<h1>Callback actions</h1>

<div class="nette-inner" id="nella-callback-panel-content">
	<table style="width: 100%">
	<?php foreach ($items as $key => $item): ?>
	<tr>
		<th><label for="nette-addons-CallbackPanel-item<?php echo $key ?>" style="width: 100%; height: 100%; position: absolute;"></label><?php echo $item['name'] ?></th>
		<td><input type="checkbox" name="--ncp-<?php echo $key ?>" id="nette-addons-CallbackPanel-item<?php echo $key ?>"></td>
	</tr>
	<?php endforeach ?>
	<tr>
		<td colspan="2">
			<label for="nette-addons-CallbackPanel-button" style="width: 100%; height: 100%; position: absolute;"></label>
			<input type="submit" value="Run" id="nette-addons-CallbackPanel-button">
			<img src="data:image/gif;base64," id="nette-addons-CallbackPanel-spinner" alt="spinner" style="display: none; position: absolute;">
		</td>
	</tr>
	</table>
</div>

<script type="text/javascript">
/* <![CDATA[ */
callbackPanel.init();
/* ]]> */
</script>